<main class="form">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <div class="card">
        <h4 class="form-heading">Client Registration</h4>
        <hr class="style2">
        <div class="card-body">
          <%= form_for(@client) do |f| %>
              <% if @client.errors.any? %>
                  <ul class="alert alert-danger">
                    <% @client.errors.full_messages.each do |msg| %>
                        <li class="alert-danger"><%= msg %></li>
                    <% end %>
                  </ul>
              <% end %>
              <div class="form-group row">
                <label for="name" class="col-md-4 col-form-label text-md-right">Name</label>
                <div class="col-md-6">
                  <%= f.text_field :client_name, autofocus: true, autocomplete: "client_name", class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Organization</label>
                <div class="col-md-6">
                  <%= f.select :organization_id, @organizations,{prompt: 'Select'},{class: "form-control mdb-select"} %>
                </div>
              </div>
              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                <div class="col-md-6">
                  <%= f.check_box :status%>
                </div>
              </div>

              <div class="form-group row">
              <div class="col-md-6 text-center">
                <%= f.submit "Add" ,class: 'btn btn-primary' %>
              </div>
              </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>



</main>


