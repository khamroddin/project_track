<main class="form">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <h2 class="form-heading">Client Registration</h2>
        <div class="card-body">
          <%= form_for(@client, url: clients_create_path,:multipart => true) do |f| %>
              <%= render "devise/shared/error_messages", resource: @client %>

              <div class="form-group row">
                <label for="name" class="col-md-4 col-form-label text-md-right">Name</label>
                <div class="col-md-6">
                  <%= f.text_field :client_name, autofocus: true, autocomplete: "client_name", class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Organization</label>
                <div class="col-md-6">
                  <%= f.select :organization_id, @organizations,{prompt: 'Select'},{class: "form-control mdb-select"} %>
                </div>
              </div>
              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Location</label>
                <div class="col-md-6">
                  <%= f.select :location_id, @locations,{prompt: 'Select'},{class: "form-control mdb-select"} %>
                </div>
              </div>
              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                <div class="col-md-6">
                  <%= f.check_box :status%>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Add" ,class: 'btn btn-primary' %>
              </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>

  <div class="span4" >
    <%unless @clients.blank?%>
        <table class="table table-bordered table-responsive-md table-striped text-center">
          <thead>
          <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Location</th>
            <th class="text-center">Organizations</th>
            <th class="text-center">Actions</th>
          </tr>
          </thead>
          <tbody>
          <%@clients.each do |client|%>
              <tr>
                <td class="pt-3-half" contenteditable="true"><%= client.client_name%></td>
                <td class="pt-3-half" contenteditable="true">test</td>
                <td class="pt-3-half">test</td>
                <td class="pt-3-half"></td>
              </tr>
          <%end%>
          </tbody>
        </table>
    <%end%>
  </div>

</main>


