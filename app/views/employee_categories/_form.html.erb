<main class="form">
  <div class="row">
    <div class="row justify-content-center">
      <div class="col-md-9">
        <div class="card">

          <div class="card-body">
            <%=form_for(@employee_category) do |cat|%>
                <% if @employee_category.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@employee_category.errors.count, "error") %> prohibited this project from being saved:</h2>

                      <ul>
                        <% @employee_category.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>
                <div class="form-group row">
                  <label for="name" class="col-md-4 col-form-label text-md-right">Category Name:</label>
                  <div class="col-md-6">
                    <%= cat.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"  %>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                  <div class="col-md-6">
                    <%= cat.check_box :status%>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-6 text-center">
                    <%= cat.submit class: 'btn btn-primary' %>
                  </div>
                </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>