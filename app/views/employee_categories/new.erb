<main class="form">
  <div class="row">
    <div class="row justify-content-center">
      <div class="col-md-9">
        <div class="card">
          <h4 class="form-heading">Employee Categories</h4>
          <hr class="style2">
          <div class="card-body">
            <%=form_for(@employee_category) do |cat|%>
                <% if @employee_category.errors.any? %>
                    <ul class="alert alert-danger">
                      <% @employee_category.errors.full_messages.each do |msg| %>
                          <li class="alert-danger"><%= msg %></li>
                      <% end %>
                    </ul>
                <% end %>

                <div class="form-group row">
                  <label for="name" class="col-md-4 col-form-label text-md-right">Category Name:</label>
                  <div class="col-md-6">
                    <%= cat.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"  %>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                  <div class="col-md-6">
                    <%= cat.check_box :status%>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-6 text-center">
                    <%= cat.submit "Add" ,class: 'btn btn-primary' %>
                  </div>
                </div>
            <%end%>
          </div>
        </div>
        <div class="row" >
          <%unless @employee_categories.blank?%>
              <table class="table table-bordered table-responsive-md table-striped text-center">
                <thead>
                <tr>
                  <th class="text-center">Category Name</th>
                  <th class="text-center">Status</th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <%@employee_categories.each do |category|%>
                    <tr>
                      <td class="pt-3-half" contenteditable="true"><%= category.name%></td>
                      <td class="pt-3-half" contenteditable="true"><%= category.status? ? 'Active' : 'In-Active'%></td>
                      <td class="pt-3-half">
                        <%= link_to 'Edit', edit_employee_category_path(category)%> |
                        <%= link_to 'Delete', employee_category_path(category),method: :delete,data: { confirm: 'Are You sure?' }%>
                      </td>
                    </tr>
                <%end%>
                </tbody>
              </table>
          <%end%>
        </div>
      </div>
    </div>

  </div>

</main>
