<main class="form">
  <div class="row">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <h2 class="form-heading">Employee Positions</h2>
          <div class="card-body">
            <%=form_for(:employee_position, :action=>emp_update_position_url) do |cat|%>
                <% @employee_position.errors.full_messages.each do |msg| %>
                    <span class="help-block"><%= msg %></span>
                <% end %>
                <div class="form-group row">
                  <label for="name" class="col-md-4 col-form-label text-md-right">Position Name:</label>
                  <div class="col-md-6">
                    <%= cat.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"  %>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                  <div class="col-md-6">
                    <%= cat.check_box :status%>
                  </div>
                </div>

                <div class="actions">
                  <%= cat.submit "Add" ,class: 'btn btn-primary' %>
                </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
      </div>
    </main>