
<main class="form">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <h2 class="form-heading">Employee Positions</h2>
          <div class="card-body">
            <%=form_for(:employee_position, :action=>employees_new_position_path) do |cat|%>
                <div class="form-group row">
                  <label for="name" class="col-md-4 col-form-label text-md-right">Position Name:</label>
                  <div class="col-md-6">
                    <%= cat.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"  %>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                  <div class="col-md-6">
                    <%= cat.check_box :status%>
                  </div>
                </div>

                <div class="actions">
                  <%= cat.submit "Add" ,class: 'btn btn-primary' %>
                </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
    <div class="span4" >
      <%unless @employee_positions.blank?%>

          <table class="table table-bordered table-responsive-md table-striped text-center">
            <thead>
            <tr>
              <th class="text-center">Position Name</th>
              <th class="text-center">Status</th>
              <th class="text-center"></th>
            </tr>
            </thead>
            <tbody>
            <%@employee_positions.each do |position|%>
                <tr>
                  <td class="pt-3-half" contenteditable="true"><%= position.name%></td>
                  <td class="pt-3-half" contenteditable="true"><%= position.status? ? 'Active' : 'In-Active'%></td>
                  <td class="pt-3-half" contenteditable="true"></td>
                </tr>
            <%end%>
            </tbody>
          </table>
      <%end%>
    </div>
  </div>

</main>
