<main class="form">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_for(@project,:multipart => true) do |f| %>
              <% if @project.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

                    <ul>
                      <% @project.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="form-group row">
                <label for="name" class="col-md-4 col-form-label text-md-right">Project</label>
                <div class="col-md-6">
                  <%= f.text_field :project_name,class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <label for="name" class="col-md-4 col-form-label text-md-right">Client</label>
                <div class="col-md-6">
                  <%= f.select :client_id,@clients,{prompt: 'Select'},{class: "form-control mdb-select"} %>
                </div>
              </div>

              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Start Date</label>
                <div class="col-md-6">
                  <%= f.date_select :start_date,class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                <label for="website" class="col-md-4 col-form-label text-md-right">End Date</label>
                <div class="col-md-6">
                  <%= f.date_select :end_date,class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <label for="name" class="col-md-4 col-form-label text-md-right">Manager</label>
                <div class="col-md-6">
                  <%= f.select :manager_id,@managers,{prompt: 'Select'},{class: "form-control mdb-select"} %>
                </div>
              </div>

              <div class="form-group row">
                <label for="location" class="col-md-4 col-form-label text-md-right">Status</label>
                <div class="col-md-6">
                  <%= f.check_box :status%>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-6 text-center">
                  <%= f.submit class: 'btn btn-primary' %>
                </div>
              </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</main>